{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "theme": "synth",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "terraform plan": "ask",
      "terraform apply": "ask",
      "terraform destroy": "ask",
      "terraform validate": "allow"
    },
    "webfetch": "allow"
  },
  "mcp": {
    "markitdown": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "markitdown-mcp"
      ]
    },
    "thinking": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "context7": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "aws_docs": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "awslabs.aws-documentation-mcp-server@latest"
      ]
    },
    "memory": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "playwright": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ]
    },
    "vectorcode": {
      "type": "local",
      "enabled": false,
      "command": [
        "vectorcode-mcp-server"
      ],
    }
  }
}
